{% extends 'base.html.twig' %}

{% block title %}Система заявок: Подать заявку{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <div class="row">
            <div class="col"><h2>Подача заявки</h2></div>
            <div class="col"><a class="btn btn-outline-primary" href="{{ path('query') }}">Список заявок</a></div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="form-group">
                <label for="textarea">{{ form_label(form.title) }}</label><br>
                {{ form_widget(form.title) }}
            </div>
            <div class="form-group">
                {{ form_row(form.image) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.mainText) }}</label><br>
                {{ form_widget(form.mainText) }}
            </div>
            <button type="submit">Сохранить</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}